@{
    ViewBag.Title = "Xamarin Forms SignalR Server Logs";
}

<div class="jumbotron">
    <h1>Xamarin Forms SignalR Server Logs</h1>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <div>
            <label for="deviceId">Token</label>
            <input type="text" id="token" value="" />
        </div>
    </div>
    <div class="col-md-4">
        <div>
            <label for="deviceId">Device</label>
            <input type="text" id="deviceId" value="" />
        </div>
    </div>
    <div class="col-md-4">
        <div>
            <label for="message">Message</label>
            <input type="text" id="message" value="" />
        </div>
    </div>
</div>
<div class="row">
    <input type="button" id="sendmessage" value="Enviar" />
    <ul id="discussion"></ul>
</div>
<h2>Logs</h2>
<div class="jumbotron">
    <div id="log"></div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.mobileHub;
            // Create a function that the hub can call back to display messages.
            chat.client.onInformationReceived = function (deviceId, message) {
                // Add the message to the page.
                $('#discussion').append('<li><strong>' + htmlEncode(deviceId) + '</strong>: ' + htmlEncode(message) + '</li>');
            };

            chat.client.log = function (message) {
                if (message.toLowerCase().indexOf("# ") !== -1) {
                    $('#log').append('<p style="font-size:0.7em;color: cornflowerblue;"><strong>' + htmlEncode(message) + '</strong></p>');
                } else {
                    $('#log').append('<p style="font-size:0.7em;">' + htmlEncode(message) + '</p>');
                }
            };
            // Inicia conexão
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Envia informação para o hub
                    chat.server.exchangeInformation(
                        $('#deviceId').val(),
                        $('#message').val(),
                        $('#token').val());
                });
            });
        });
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}